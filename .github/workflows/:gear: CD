name: Backend CD with Gradle

on:
  push:
    branches: [ "main" ]

jobs:
  build-deploy-backend:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up JDK 21
        uses: actions/setup-java@v4
        with:
          java-version: '21'
          distribution: 'temurin'

      - name: Build backend JAR
        working-directory: ./backend
        run: |
          chmod +x ./gradlew
          ./gradlew build -x test

      - name: Transfer backend JAR to remote server
        uses: appleboy/scp-action@master
        with:
          username: ubuntu
          host: ${{ secrets.SSH_HOST }}
          key: ${{ secrets.SSH_KEY }}
          source: "backend/build/libs/*.jar"
          target: "/home/ubuntu/Planlist/"

      - name: Run Docker Compose on remote server
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.SSH_HOST }}
          username: ubuntu
          key: ${{ secrets.SSH_KEY }}
          script: |
            cd ~/Planlist
            export DB_PASSWORD=${{ secrets.DB_PASSWORD }}
            export AWS_ACCESS_KEY_ID=${{ secrets.AWS_ACCESS_KEY_ID_BACK }}
            export AWS_SECRET_ACCESS_KEY=${{ secrets.AWS_SECRET_ACCESS_KEY_BACK }}
            export GOOGLE_CLIENT_ID=${{ secrets.GOOGLE_CLIENT_ID }}
            export GOOGLE_CLIENT_SECRET=${{ secrets.GOOGLE_CLIENT_SECRET }}
            export JWT_SECRET=${{ secrets.JWT_SECRET }}
            docker compose up -d --build --no-deps spring
            docker image prune -f
